{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ESNext", "DOM"],
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "strict": true,
    "types": ["@playwright/test", "node"],
    "skipLibCheck": true
  },
  "include": ["tests", "pages", "utils", "playwright.config.ts"]
}
